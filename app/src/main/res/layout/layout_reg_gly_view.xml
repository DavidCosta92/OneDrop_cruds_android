<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1B4E4"
        android:dividerPadding="10sp"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#AF2B2B"
        android:showDividers="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="#E81212">

            <TextView
                android:id="@+id/recycler_reg_gly_id"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="id"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_reg_gly_date"
                android:layout_width="225sp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Fecha"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_reg_gly_value"
                android:layout_width="100sp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="0.78"
                android:textAlignment="textEnd"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycler_reg_gly_note"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:text="notas del registro..."
                android:textSize="16sp" />

            <Button
                android:id="@+id/recycler_btn_edit_reg_gly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*" />

            <Button
                android:id="@+id/recycler_btn_delete_reg_gly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4A0303"
                android:backgroundTint="#DFAFAF"
                android:text="-"
                android:textColorHighlight="#EC7272"
                android:textColorLink="#E81212" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>
</LinearLayout>